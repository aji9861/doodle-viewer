<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="activity_vertical_margin">16dp</dimen>

    <integer name="config_slide_time">800</integer>

    <string name="action_settings">Settings</string>
    <string name="app_name">Doodle Viewer</string>
    <string name="google_base">http://www.google.com/</string>
    <string name="google_doodle_base">http://www.google.com/doodles/</string>

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="nowCardStyle" parent="android:Widget.TextView">
        <item name="android:gravity">top</item>
        <item name="android:minHeight">200dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

</resources>
